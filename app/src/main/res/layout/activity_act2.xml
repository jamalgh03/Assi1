<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:background="#FEFFFF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="111dp"
        android:layout_gravity="center_horizontal"
        android:background="#FFFDFD"
        android:src="@drawable/ass_photo" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_marginTop="20dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="please enter number between 0 and 9"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="X"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="Result is :"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/res2"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="monospace"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nt"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="monospace"
        android:text="Some Ways to calculate multiplication:"
        android:textSize="16sp"
        android:textStyle="bold" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="111dp">

        <TextView
            android:id="@+id/result1"
            android:layout_width="387dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:fontFamily="monospace"
            android:textSize="20sp"
            android:textStyle="bold" />
    </ScrollView>

    <Button
        android:id="@+id/claculate"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:fontFamily="monospace"
        android:shadowColor="#E6D5D5"
        android:text="claculate"
        android:textColorHighlight="#F4E7E7"
        android:textColorHint="#D8A6A6"
        android:textSize="17sp"
        android:textStyle="bold"
        app:rippleColor="#9F7575" />

    <Button
        android:id="@+id/Go"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:fontFamily="monospace"
        android:text="Go to Tabels"
        android:textSize="16sp"
        android:textStyle="bold" />


</LinearLayout>
